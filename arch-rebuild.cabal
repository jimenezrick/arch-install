cabal-version:       3.0

name:                arch-rebuild
version:             0.1.0.0
license:             BSD-3-Clause
license-file:        LICENSE
author:              Ricardo Catalinas Jim√©nez
maintainer:          r@untroubled.be
category:            System

executable arch-rebuild
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , BlockArguments
  ghc-options:         -Wall -fno-warn-name-shadowing
  hs-source-dirs:      src
  main-is:             Main.hs

  other-modules:       Build
                     , Config
                     , Checks
                     , Chroot
                     , Command
                     , Disk
                     , Filesystem
                     , FilePath
                     , FsTree
                     , Match
                     , Fstab
                     , Error
                     , AUR
                     , Version

  build-depends:       base ==4.*
                     , data-default-class
                     , unix
                     , text
                     , attoparsec
                     , optparse-generic
                     , mtl
                     , rio
                     , typed-process
                     , unliftio
                     , interpolate
                     , dhall
                     , time-units
                     , lens
                     , lens-aeson
                     , aeson
                     , string-conversions
                     , uuid
                     , network-uri
                     , binary
                     , pretty-show
                     , githash
